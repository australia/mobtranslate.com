            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "related_word": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "word": {
                "type": "string"
              },
              "normalized_word": {
                "type": "string"
              }
            }
          },
          "notes": {
            "type": "string"
          }
        }
      },
      "Pagination": {
        "type": "object",
