          },
          "synonyms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "word": {
                  "type": "string"
                }
              }
            }
          },
          "antonyms": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "word": {
                  "type": "string"
                }
              }
            }
          },
          "etymologies": {
            "type": "array",
            "items": {
