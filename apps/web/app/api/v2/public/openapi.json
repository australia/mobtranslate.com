{
  "openapi": "3.0.0",
  "info": {
    "title": "MobTranslate Dictionary API",
    "version": "2.0.0",
    "description": "Public API for accessing dictionary data including words, definitions, translations, and more. Perfect for building language learning apps, quiz games, and educational tools.",
    "contact": {
      "name": "API Support",
      "url": "https://mobtranslate.com"
    }
  },
  "servers": [
    {
      "url": "https://mobtranslate.com/api/v2/public",
      "description": "Production server"
    },
    {
      "url": "http://localhost:3000/api/v2/public",
      "description": "Development server"
    }
  ],
  "paths": {
    "/dictionaries": {
      "get": {
        "summary": "List all dictionaries",
        "description": "Get a paginated list of all available dictionaries (languages)",
        "tags": ["Dictionaries"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "description": "Page number",
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Number of items per page (max 100)",
            "schema": {
              "type": "integer",
              "default": 20,
              "minimum": 1,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DictionariesResponse"
                }
              }
            }
          }
        }
      }
    },
    "/dictionaries/{id}": {
      "get": {
        "summary": "Get dictionary details",
        "description": "Get detailed information about a specific dictionary",
        "tags": ["Dictionaries"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Dictionary ID or language code",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DictionaryDetail"
                }
              }
            }
          },
          "404": {
            "description": "Dictionary not found"
          }
        }
      }
    },
    "/dictionaries/{id}/words": {
      "get": {
        "summary": "Get words from dictionary",
        "description": "Get a paginated list of words from a specific dictionary with full details",
        "tags": ["Words"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Dictionary ID or language code",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 50,
              "maximum": 100
            }
          },
          {
            "name": "search",
            "in": "query",
            "description": "Search filter for words",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "word_class",
            "in": "query",
            "description": "Filter by word class ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "verified_only",
            "in": "query",
            "description": "Only return verified words",
            "schema": {
              "type": "boolean"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WordsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/words/{id}": {
      "get": {
        "summary": "Get word details",
        "description": "Get complete details for a specific word including all related data",
        "tags": ["Words"],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Word ID",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/WordDetail"
                }
              }
            }
          },
          "404": {
            "description": "Word not found"
          }
        }
      }
    },
    "/search": {
      "get": {
        "summary": "Search across dictionaries",
        "description": "Search for words, definitions, or translations across all or specific dictionaries",
        "tags": ["Search"],
        "parameters": [
          {
            "name": "q",
            "in": "query",
            "required": true,
            "description": "Search query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "type",
            "in": "query",
            "description": "Type of search",
            "schema": {
              "type": "string",
              "enum": ["all", "word", "definition", "translation"],
              "default": "all"
            }
          },
          {
            "name": "dictionary_id",
            "in": "query",
            "description": "Filter by dictionary ID",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "dictionary_code",
            "in": "query",
            "description": "Filter by language code",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 20,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SearchResponse"
                }
              }
            }
          },
          "400": {
            "description": "Search query is required"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Dictionary": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "code": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "native_name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "region": {
            "type": "string"
          },
          "country": {
            "type": "string"
          },
          "speakers_count": {
            "type": "integer"
          },
          "status": {
            "type": "string"
          },
          "family": {
            "type": "string"
          },
          "iso_639_1": {
            "type": "string"
          },
          "iso_639_2": {
            "type": "string"
          },
          "iso_639_3": {
            "type": "string"
          },
          "glottocode": {
            "type": "string"
          },
          "writing_system": {
            "type": "string"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "DictionaryDetail": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Dictionary"
          },
          {
            "type": "object",
