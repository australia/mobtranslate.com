              "orthography_notes": {
                "type": "string"
              },
              "metadata": {
                "type": "object"
              },
              "stats": {
                "type": "object",
                "properties": {
                  "total_words": {
                    "type": "integer"
                  }
                }
              }
            }
          }
        ]
      },
      "Word": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "format": "uuid"
          },
          "word": {
            "type": "string"
          },
          "normalized_word": {
            "type": "string"
          },
          "phonetic_transcription": {
            "type": "string"
          },
          "word_class": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "abbreviation": {
                "type": "string"
              }
            }
          },
          "word_type": {
            "type": "string"
          },
          "gender": {
            "type": "string"
          },
          "number": {
            "type": "string"
          },
          "stem": {
            "type": "string"
          },
          "is_loan_word": {
            "type": "boolean"
          },
          "loan_source_language": {
            "type": "string"
          },
          "frequency_score": {
            "type": "integer"
          },
          "register": {
            "type": "string"
          },
          "domain": {
            "type": "string"
          },
          "dialectal_variation": {
            "type": "boolean"
          },
          "obsolete": {
            "type": "boolean"
          },
          "sensitive_content": {
            "type": "boolean"
          },
          "notes": {
            "type": "string"
          },
          "is_verified": {
            "type": "boolean"
          },
          "quality_score": {
            "type": "integer"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "definitions": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Definition"
            }
          },
          "translations": {
            "type": "array",
