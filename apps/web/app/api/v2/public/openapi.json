          },
          "total_pages": {
            "type": "integer"
          },
          "has_next": {
            "type": "boolean"
          },
          "has_previous": {
            "type": "boolean"
          }
        }
      },
      "DictionariesResponse": {
        "type": "object",
        "properties": {
          "dictionaries": {
            "type": "array",
