      "WordDetail": {
        "allOf": [
          {
            "$ref": "#/components/schemas/Word"
          },
          {
            "type": "object",
            "properties": {
              "language": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "code": {
                    "type": "string"
