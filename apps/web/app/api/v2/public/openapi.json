          }
        }
      },
      "UsageExample": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "example": {
            "type": "string"
          },
          "translation": {
            "type": "string"
          },
          "context": {
            "type": "string"
          },
          "source": {
            "type": "string"
          }
        }
      },
      "Etymology": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
