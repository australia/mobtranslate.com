              },
              "verified_at": {
                "type": "string",
                "format": "date-time"
              },
              "last_reviewed_at": {
                "type": "string",
                "format": "date-time"
              },
              "review_count": {
                "type": "integer"
              },
              "community_notes": {
                "type": "string"
              },
              "cultural_contexts": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/CulturalContext"
