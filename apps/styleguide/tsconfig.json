{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@mobtranslate/ui": ["../../packages/ui/src"],
      "@mobtranslate/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [{ "name": "next" }],
    "strictNullChecks": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "incremental": true,
    "tsBuildInfoFile": ".cache/tsbuildinfo/typecheck.tsbuildinfo",
    "module": "esnext",
    "resolveJsonModule": true,
    "jsx": "preserve"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
